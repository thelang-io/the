  fn _generateMainDeclaration (mut self: ref Codegen, item: ref Parser.Statement) AST.CStatement? {
    if !item.isMainDeclaration() {
      return nil
    }

    statement := item.asMainDeclaration()
    statementBody := statement.body.asBlock()
    mainStatements := self._generateBlock(ref statementBody.body, preserveData: true)

    self.mainStatements.merge(self.blockData.getSetup())
    d := self.mainStatements.len
    self.mainStatements.merge(mainStatements)
    a := self.mainStatements.len
    self.mainStatements.merge(self.blockData.getTeardown())

    return AST.createEmptyStatement()
  }

