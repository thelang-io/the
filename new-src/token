obj Token {
  type: int
  val: str
  start: int
  end: int
}

// enum TokenAssociativity
TK_ASSOC_NONE := 0
TK_ASSOC_LEFT := 1
TK_ASSOC_RIGHT := 2

// enum TokenType
TK_UNKNOWN := 0
TK_EOF := 1
TK_ID := 2
TK_WHITESPACE := 3

TK_COMMENT_BLOCK := 4
TK_COMMENT_LINE := 5

TK_LIT_CHAR := 50
TK_LIT_FLOAT := 51
TK_LIT_INT_BIN := 52
TK_LIT_INT_DEC := 53
TK_LIT_INT_HEX := 54
TK_LIT_INT_OCT := 55
