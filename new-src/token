TK_KW_IS := 111
TK_KW_LOOP := 112
TK_KW_MAIN := 113
TK_KW_MUT := 114
TK_KW_NIL := 115
TK_KW_OBJ := 116
TK_KW_REF := 117
TK_KW_RETURN := 118
